    <label data-dropdown="#dropdown-group">
        <span class="prefix">Group</span>
        <input type="text" id="group" name="group" value="{{group}}" readonly />
    </label>
    <input type="hidden" id="groupId" name="groupId" value="{{groupId}}" />
</div>

