<div class="row">
    <input type="text" placeholder="Name *"  aria-label="Name *" id="name" name="name" value="{{name}}" data-parsley-required />
</div>

<div class="row">
    <input type="text" placeholder="Surname"  aria-label="Surname" id="surname" name="surname" value="{{surname}}" />
</div>

<div class="row">
    <input type="text" placeholder="Birthday"  aria-label="Birthday" id="birthday" name="birthday" value="{{birthday}}" />
</div>

<div class="row">
    <input type="text" placeholder="Organization"  aria-label="Organization" id="organization" name="organization" value="{{organization}}" />
</div>

<div class="row">
    <input type="text" placeholder="Position in organisation"  aria-label="Position in organisation" id="position" name="position" value="{{position}}" />
</div>

